<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <EditText
        android:id="@+id/editTextCelsius"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="@string/hint_celsius"
        android:inputType="numberDecimal"
        android:textColor="@android:color/black"
        android:autofillHints="username" />

    <EditText
        android:id="@+id/editTextFahrenheit"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="@string/hint_fahrenheit"
        android:inputType="numberDecimal"
        android:textColor="@android:color/black"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnToCelsius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/convert_to_celsius"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btnToFahrenheit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/convert_to_fahrenheit"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clear"
        android:layout_marginTop="8dp" />
</LinearLayout>
